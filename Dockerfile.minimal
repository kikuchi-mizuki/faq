FROM python:3.9-slim

WORKDIR /app

# システムの依存関係をインストール
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Pythonの依存関係をインストール
RUN pip install flask==2.3.0

# アプリケーションファイルをコピー
COPY minimal_app.py ./

# ポートを公開
EXPOSE 5000

# アプリケーションを起動
CMD ["python3", "minimal_app.py"]
